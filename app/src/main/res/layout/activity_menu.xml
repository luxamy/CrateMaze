<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/logo"
        android:id="@+id/imageView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/two_player_one"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/single"
        android:layout_marginStart="17dp"
        android:id="@+id/twoplayer" />

    <Button
        android:text="Highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single"
        android:layout_toEndOf="@+id/single"
        android:layout_marginTop="29dp"
        android:id="@+id/highscore" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/highscore"
        android:layout_toEndOf="@+id/highscore"
        android:layout_marginStart="22dp"
        android:id="@+id/logout" />

    <Button
        android:text="exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/wifi"
        android:id="@+id/exit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/two_player"
        android:id="@+id/wifi"
        android:layout_alignBottom="@+id/twoplayer"
        android:layout_toEndOf="@+id/logout" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/one_player"
        android:layout_marginStart="13dp"
        android:id="@+id/single"
        android:layout_alignTop="@+id/twoplayer"
        android:layout_alignParentStart="true" />
</RelativeLayout>